<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Valor default para as cores das pedras -->
        <item name="pedra_cor_primaria">@color/pedraPrimariaDisabled</item>
        <item name="pedra_cor_secundaria">@color/pedraSecundariaDisabled</item>
    </style>

    <style name="ButtonColored">
        <item name="android:paddingLeft">@dimen/button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/button_padding_left_right</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="background">@color/colorSecondary</item>
    </style>

    <style name="PedraEnabled">
        <item name="pedra_cor_primaria">@color/pedraPrimariaEnabled</item>
        <item name="pedra_cor_secundaria">@color/pedraSecundariaEnabled</item>
    </style>

    <style name="PedraGrande">
        <item name="android:layout_marginTop">@dimen/pedra_grande_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/pedra_grande_margin_start_end</item>
        <item name="android:layout_marginRight">@dimen/pedra_grande_margin_start_end</item>
        <item name="android:background">@drawable/pedra</item>
        <item name="android:theme">@style/PedraEnabled</item>
        <item name="android:textSize">@dimen/pedra_grande_texto</item>
    </style>
</resources>
