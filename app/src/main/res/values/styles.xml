<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="background">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.ButtonToBar" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/textDisabled</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>
    
    <style name="Pedra">
        <item name="pedra_cor_primaria">@color/pedraPrimariaEnabled</item>
        <item name="pedra_cor_secundaria">@color/pedraSecundariaEnabled</item>
    </style>

    <style name="PedraDisabled" parent="Pedra">
        <item name="pedra_cor_primaria">@color/pedraPrimariaDisabled</item>
        <item name="pedra_cor_secundaria">@color/pedraSecundariaDisabled</item>
    </style>

</resources>
