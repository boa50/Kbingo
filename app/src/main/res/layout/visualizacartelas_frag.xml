<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visualizacartelas.VisualizaCartelasFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_numero_cartela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número da Cartela"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl_cartela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_numero_cartela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TESTE DE ALGUMA COISA"
            android:hint="Número da Cartela"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gl_cartela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="5"
        app:layout_constraintTop_toBottomOf="@id/til_numero_cartela"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView android:text="K"/>
        <TextView android:text="I"/>
        <TextView android:text="N"/>
        <TextView android:text="K"/>
        <TextView android:text="A"/>
        <TextView android:text="01"/>
        <TextView android:text="02"/>
        <TextView android:text="03"/>
        <TextView android:text="04"/>
        <TextView android:text="05"/>
        <TextView android:text="06"/>
        <TextView android:text="07"/>
        <TextView android:text="08"/>
        <TextView android:text="09"/>
        <TextView android:text="10"/>
        <TextView android:text="11"/>
        <TextView android:text="12"/>
        <TextView android:text="."/>
        <TextView android:text="14"/>
        <TextView android:text="15"/>
        <TextView android:text="16"/>
        <TextView android:text="17"/>
        <TextView android:text="18"/>
        <TextView android:text="19"/>
        <TextView android:text="20"/>
        <TextView android:text="21"/>
        <TextView android:text="22"/>
        <TextView android:text="23"/>
        <TextView android:text="24"/>
        <TextView android:text="25"/>
    </android.support.v7.widget.GridLayout>


</android.support.constraint.ConstraintLayout>