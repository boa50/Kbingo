<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".visualizacartelas.VisualizaCartelasFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_numero_cartela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl_cartela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_numero_cartela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NÃºmero da Cartela"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gl_cartela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="5"
        android:background="@drawable/customborder"
        app:layout_constraintTop_toBottomOf="@id/til_numero_cartela"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    </android.support.v7.widget.GridLayout>


</android.support.constraint.ConstraintLayout>