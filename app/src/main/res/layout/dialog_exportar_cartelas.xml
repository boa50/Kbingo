<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:padding="@dimen/dialog_content_padding">

    <TextView
        android:id="@+id/tv_dialog_exportar_cartelas_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_exportar_cartelas_content_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_exportar_cartelas_content_margin"
        android:text="@string/dialog_exportar_cartelas_separator_text"
        android:textSize="@dimen/dialog_exportar_cartelas_separator_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/til_dialog_exportar_cartelas_final"
        app:layout_constraintStart_toEndOf="@+id/til_dialog_exportar_cartelas_inicial"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_exportar_cartelas_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_dialog_exportar_cartelas_inicial"
        android:layout_width="@dimen/dialog_exportar_cartelas_til_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_exportar_cartelas_content_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_exportar_cartelas_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_dialog_exportar_cartelas_inicial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="@string/dialog_exportar_cartelas_et_inicial_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_dialog_exportar_cartelas_final"
        android:layout_width="@dimen/dialog_exportar_cartelas_til_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_exportar_cartelas_content_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_exportar_cartelas_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_dialog_exportar_cartelas_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/dialog_exportar_cartelas_et_final_hint" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>