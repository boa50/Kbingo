<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.boa50.kbingo.realizasorteio.RealizaSorteioFragment">

    <LinearLayout
        android:id="@+id/ll_lista_box"
        android:layout_width="700dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingStart="8dp">

        <LinearLayout
            android:id="@+id/ll_botoes_lista_pedras"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_lista_pedras"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_sortear_pedra"
        android:layout_width="@dimen/pedra_grande_lado"
        android:layout_height="@dimen/pedra_grande_lado"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/pedra"
        android:theme="@style/Pedra"
        android:text="@string/bt_sortear_pedra"
        android:textSize="@dimen/pedra_grande_texto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ll_lista_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_novo_sorteio"/>

    <Button
        android:id="@+id/bt_novo_sorteio"
        android:theme="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_novo_sorteio"
        app:layout_constraintTop_toBottomOf="@+id/bt_sortear_pedra"
        app:layout_constraintStart_toEndOf="@id/ll_lista_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
